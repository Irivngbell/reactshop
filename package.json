{
  "name": "reactshop",
  "version": "1.0.0",
  "description": "MERN Shopping Cart",
  "main": "server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "node server.js",
    "dev": "nodemon server.js",
    "client": "npm start --prefix client",
    "init": "npm install && npm install --prefix client",
    "watch": "concurrently \"npm run dev\" \"npm run client\""
  },
  "author": "Irving",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@stripe/react-stripe-js": "^1.4.1",
    "@stripe/stripe-js": "^1.17.1",
    "bcryptjs": "^2.4.3",
    "commonmark": "^0.30.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-validator": "^6.12.1",
    "jsonwebtoken": "^8.5.1",
    "mariadb": "^2.5.4",
    "mysql2": "^2.3.0",
    "react-quill": "^1.3.5",
    "sequelize": "^6.6.5",
    "stripe": "^8.170.0",
    "toastr": "^2.1.4"
  },
  "devDependencies": {
    "concurrently": "^6.2.1",
    "nodemon": "^2.0.12"
  },
  "type": "module",
  "prettier": {
    "printWidth": 80,
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "overrides": [
      {
        "files": "*.js",
        "options": {
          "parser": "babel"
        }
      },
      {
        "files": "*.json",
        "options": {
          "parser": "json"
        }
      }
    ],
    "semi": true,
    "requirePragma": false,
    "proseWrap": "preserve",
    "arrowParens": "avoid",
    "htmlWhitespaceSensitivity": "css",
    "quoteProps": "as-needed"
  }
}
